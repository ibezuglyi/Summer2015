@{
    ViewBag.Title = "Home Page";
}


<div class="main-content row">
    <div class="main-photo">
        <img src="~/Content/Images/manwithpen.jpg" />
    </div>

    <div class="main-buttons">
        <div class="buttons-group">
            @Html.ActionLink("Login as a recruiter", "Login", "Recruiter", null, new { @class = "btn-large waves-effect waves-light" })<br />
            @Html.ActionLink("Register as a recruiter", "Register", "Recruiter", null, new { @class = "btn-flat waves-effect waves-light" })<br />
        </div>
        <div class="buttons-group">
            @Html.ActionLink("Login as a candidate", "Login", "Candidate", null, new { @class = "btn-large waves-effect waves-light" })<br />
            @Html.ActionLink("Register as a candidate", "Register", "Candidate", null, new { @class = "btn-flat waves-effect waves-light" })<br />
        </div>   
    </div>
</div>


