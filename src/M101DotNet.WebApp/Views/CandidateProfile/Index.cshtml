@model WebApp.Models.CandidateUser

@{
    ViewBag.Title = "Index";
}



<div class="form-part">
    <label>Name: </label> @Model.Name 
</div>
<div class="form-part">
    <label>Email: </label> @Model.Email 
</div>

    @using (Html.BeginForm())
    {
        <div class="form-part">
            @Html.Label("Surname:") <br />
            @Html.TextBox("surname", Model.Surname)
        </div>
        <div class="form-part">
        @Html.Label("Experience in Years:") <br>
            @Html.TextBox("experienceInYears", Model.ExperienceInYears)
            <span class="red-text text-darken-2">@Html.ValidationMessage("experienceInYearsError")</span>          
        </div>
        <div class="form-part">        
            @Html.Label("Experience Description:") <br />
            @Html.TextArea("experienceDescription", Model.ExperienceDescription, new { @class = "materialize-textarea" })
        </div>
        <div class="form-part">
            @Html.Label("Salary:") <br />
            @Html.TextBox("salary", Model.Salary)
            <span class="red-text text-darken-2">@Html.ValidationMessage("salaryError")</span>
        </div>

    for (int i = 0; i < Model.Skills.Count; i++)
    {
           <input type="hidden" name="Skills.Index" value="@i" />
        <div class="row">
            <span>
                @Html.TextBoxFor(r => r.Skills[i].Name)
            </span>
            <span>
                @Html.TextBoxFor(r => r.Skills[i].Level)
            </span>
        </div>
    }

    @*@Html.Partial("_SkillFormPartial", Model.Skills)*@
        <p>
            <button type="submit" class="btn">Save &raquo;</button>
        </p>


    }
