@model WebApp.Models.Candidate.CandidateViewModel
@{
    ViewBag.Title = "Candidate profile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4 class="lime card-panel">@ViewBag.Title</h4>
<div class="profile">
    <div class="card-panel lime lighten-2">
        <div class="row-profile">
            <span>Name:</span> 
            @Model.Name
        </div>
        <div class="row-profile">
            <span>Modification date:</span>
            @Model.ModificationDate
        </div>
        <div class="row-profile">
            <span>Salary:</span>
            @Model.Candidate.Salary
        </div>
        <div class="row-profile">
            <span>Experience in years:</span>
            @Model.Candidate.ExperienceInYears
        </div>
        <div class="row-profile">
            <span>Experience description:</span><br />
            @Model.Candidate.ExperienceDescription
        </div>
    </div>
    <div>
        <span>Skills:</span>
        @for (int i = 0; i < Model.Candidate.Skills.Count; i++)
        {
            <div class="card-panel grey lighten-1">
                @Model.Candidate.Skills[i].Name
                @Model.Candidate.Skills[i].Level
            </div>
        }
    </div>
</div>