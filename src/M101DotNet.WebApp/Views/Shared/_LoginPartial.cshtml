@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("Logout", "User", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        <ul class="right hide-on-med-and-down">
            <li class="navbar-text"><a>Hello @User.Identity.Name</a></li>
            <li><a href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>
        </ul>
        
        <ul class="right hide-on-med-and-down">
        @if (User.IsInRole("Candidate"))
        {
            <li>@Html.ActionLink("Profile", "Index", "CandidateProfile")</li>
        }
        else
        {
            <li>@Html.ActionLink("Offers list", "OffersList", "Offer")</li>
            <li>@Html.ActionLink("Create Offer", "Create", "Offer")</li>
            <li>@Html.ActionLink("Profile", "Index", "RecruiterProfile")</li>            
        }
            
        </ul>
    }
    
}

