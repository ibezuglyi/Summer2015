@model List<WebApp.Models.Candidate.SkillModel>

<div class="row red-text text-darken-2">
    @Html.ValidationMessage("notEnoughSkills")
    @Html.ValidationMessage("duplicateSkills")
</div>


@for (int i = 0; i < Model.Count; i++)
{
    var nameInputName = string.Format("Skills[{0}].Name", i);
    var levelInputName = string.Format("Skills[{0}].Level", i);
    
    <div class="skill-row">
        <div class="row">
            <input type="hidden" name="Skills.Index" value="@i" />
            <span class="col s3">
                <input id="@nameInputName" name="@nameInputName" value="@Model[i].Name" type="text" />
            </span>
            <span class="col s3">
                <input id="@levelInputName" name="@levelInputName" value="@Model[i].Level" type="text" />
            </span>
            <button class="btn delete-skill red lighten-3">Delete</button>
        </div>
        <div class="row red-text text-darken-2">
            <span class="col s3">
                @Html.ValidationMessage(nameInputName)
            </span>
            <span class="col s3">
                @Html.ValidationMessage(levelInputName)
            </span>
        </div>
    </div>
    
}

<p>
    <button type="submit" class="btn">Save &raquo;</button>
</p>
