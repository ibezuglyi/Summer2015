@model WebApp.Models.Offer.ScoredOfferViewModel
@{
    ViewBag.Title = "_ScoredOfferPartial";
}
<a href="@Url.Action("Details", "Offer", new {id = Model.Offer.Id })">
    <div class="grey lighten-5 card-panel list-panel row">

        <div class="left panel-part-left">
            <div>
                <div class="inline-field offer-title">
                    <h5>@Model.Offer.Name</h5>
                </div>
                <div>@Model.ModificationDate</div>
                <div class="description">
                    <p>
                        @if (Model.Offer.Description != null)
                        {
                            @Model.Offer.Description.Substring(0, Math.Min(Model.Offer.Description.Count(), 200))
                        }
                    </p>

                </div>
                @Html.Partial("_SkillsListPartial", Model.TopSkills)
            </div>
        </div>

        <div class="right panel-part-right">
            <div class="additional-info">
                <div class="additional-info-element">
                    <h5>@Model.Offer.Salary PLN</h5>
                </div>
                <div class="additional-info-element clearfix">
                    <span>
                        @String.Format("{0:0.00}", Model.Offer.Score)
                    </span>
                </div>
            </div>
        </div>
    </div>
</a>