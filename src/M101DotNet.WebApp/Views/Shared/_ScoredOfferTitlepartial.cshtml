@model WebApp.Models.Offer.ScoredOfferModel
@{
    ViewBag.Title = "_ScoredOfferTitlePartial";
}

<div class="offer-title">
    <div class="inline-field">
        <div class="card-panel orange lighten-3">
            <span>@Model.Name</span>
        </div>
    </div>
    <div class="inline-field">
        <div class="card-panel orange lighten-3">
            <span>@Model.Salary PLN</span>
        </div>
    </div>
    <div class="inline-field">
        <div class="card-panel orange lighten-3">
            <span>Score: @String.Format("{0:0.00}", Model.Score)</span>
        </div>
    </div>
</div> 