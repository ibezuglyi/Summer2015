@model WebApp.Entities.JobOffer

@{
    ViewBag.Title = "CreateOffer";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4>CreateOffer</h4>

@using (Html.BeginForm())
{
    <div class="form-part">
        @Html.Label("Offer Name:")<br />
        @Html.TextBox("name", Model.Name)
        <span class="red-text text-darken-2">@Html.ValidationMessage("emptyName")</span>
</div>
    <div class="form-part">
        @Html.Label("Salary:")<br />
        @Html.TextBox("salary", Model.Salary)
        <span class="red-text text-darken-2">@Html.ValidationMessage("salaryError")</span>
</div>
    <p>
        <button type="submit" class="btn">Save &raquo;</button>
    </p>
}

