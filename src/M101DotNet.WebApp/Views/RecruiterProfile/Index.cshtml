@model WebApp.Models.Recruiter.RecruiterViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card-panel grey lighten-5">
    <div class="form-part">
        <label>Name: </label>@Model.Name
    </div>
    <div class="form-part">
        <label>Email: </label>@Model.Email
    </div>
    @using (Html.BeginForm())
    {
        <div class="form-part">
            @Html.Label("Company name:")<br />
            @Html.TextBox("companyName", Model.Recruiter.CompanyName)
        </div>
        <div class="form-part">
            @Html.Label("Company description:")<br />
            @Html.TextArea("companyDescription", Model.Recruiter.CompanyDescription, new { @class = "materialize-textarea" })
        </div>
        <p>
            <button type="submit" class="btn">Save &raquo;</button>
        </p>
    }
</div>