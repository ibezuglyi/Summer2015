@model WebApp.Models.RecruiterUser
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="form-part">
    <label>Name: </label>@Model.Name
</div>
<div class="form-part">
    <label>Email: </label>@Model.Email
</div>
@using (Html.BeginForm())
{
    <div class="form-part">
        @Html.Label("Surname:")<br/>
        @Html.TextBox("surname", Model.Surname)
    </div>
    <div class="form-part">
        @Html.Label("Company Name:")<br/>
        @Html.TextBox("companyName", Model.CompanyName)
    </div>
    <div class="form-part">
        @Html.Label("Company Description:")<br/>
        @Html.TextArea("companyDescription", Model.CompanyDescription)
    </div>
    <p>
        <button type="submit" class="btn">Save &raquo;</button>
    </p>
}